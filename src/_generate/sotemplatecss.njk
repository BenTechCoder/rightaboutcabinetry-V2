@import url('https://fonts.googleapis.com/css2?family=Fjalla+One&family=Merriweather&display=swap');

body {
    font-family: 'Fjalla One', sans-serif;
    background: url("https://live.staticflickr.com/2178/2370612355_dab1956a02_b.jpg");
  /* background-position: center; */
  background-repeat: no-repeat;
  background-size: cover;

}

.social-container {
     width: 90vw;
    width: clamp(16rem, 90vw, 70rem);
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    position: relative;
    text-align:center;
    color: white;
}

h1 {
  font-size: clamp(3.27rem, calc(2.75rem + 2.56vw), 4.58rem);
  margin-bottom: 0;
}

.heading {
  padding: 1rem;
}

p {
  font-size: (1.89rem, calc(1.71rem + 0.89vw), 2.34rem);
}



